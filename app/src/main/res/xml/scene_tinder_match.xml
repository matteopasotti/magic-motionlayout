<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1500">


        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/arrow" />

        <KeyFrameSet>

            <KeyCycle
                android:translationY="0dp"
                app:framePosition="0"
                app:motionTarget="@id/btn_chat"
                app:waveOffset="0dp"
                app:wavePeriod="0"
                app:waveShape="bounce" />

            <KeyCycle
                android:translationY="-10dp"
                app:framePosition="100"
                app:motionTarget="@id/btn_chat"
                app:waveOffset="0dp"
                app:wavePeriod="1"
                app:waveShape="bounce" />


            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_3"
                app:percentY="-0.3" />

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_3"
                app:percentY="0.3" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_3"
                app:percentY="-0.25" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_2"
                app:percentY="-0.25" />

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_2"
                app:percentY="0.1" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_2"
                app:percentY="-0.3" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_1"
                app:percentY="0.5" />

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_1"
                app:percentY="-0.1" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/heart_1"
                app:percentY="0.3" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/close">
            <Layout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_height="24dp"
                app:layout_marginEnd="20dp"
                app:layout_marginTop="20dp"
                app:layout_width="24dp" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/arrow">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_height="wrap_content"
                app:layout_marginBottom="16dp"
                app:layout_marginStart="16dp"
                app:layout_width="wrap_content" />
            <Transform android:rotation="0" />
        </Constraint>

        <Constraint android:id="@+id/heart_1">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_height="wrap_content"
                app:layout_marginBottom="20dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/heart_2">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/heart_1"
                app:layout_height="wrap_content"
                app:layout_marginBottom="20dp"
                app:layout_marginStart="20dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/heart_3">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_height="wrap_content"
                app:layout_marginBottom="20dp"
                app:layout_marginEnd="20dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/heart_4">
            <Layout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_height="wrap_content"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/man_image">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_height="64dp"
                app:layout_marginStart="8dp"
                app:layout_width="64dp" />
            <Transform android:elevation="2dp" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/woman_image">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_height="64dp"
                app:layout_width="64dp" />
            <Transform android:elevation="2dp" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/match_text">
            <Layout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_height="wrap_content"
                app:layout_width="0dp" />
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/btn_chat">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_height="wrap_content"
                app:layout_marginBottom="30dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="0" />
        </Constraint>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/close">
            <Layout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_height="24dp"
                app:layout_marginEnd="20dp"
                app:layout_marginTop="20dp"
                app:layout_width="24dp" />
            <Transform app:elevation="2dp" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/heart_4">
            <Layout
                app:layout_constraintStart_toStartOf="@+id/match_text"
                app:layout_constraintTop_toBottomOf="@+id/match_text"
                app:layout_height="wrap_content"
                app:layout_marginTop="20dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="1" />
        </Constraint>


        <Constraint android:id="@+id/heart_1">
            <Layout
                app:layout_constraintEnd_toEndOf="@+id/man_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/man_image"
                app:layout_height="wrap_content"
                app:layout_marginTop="150dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/heart_2">
            <Layout
                app:layout_constraintEnd_toEndOf="@+id/woman_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/woman_image"
                app:layout_height="wrap_content"
                app:layout_marginStart="20dp"
                app:layout_marginTop="160dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/heart_3">
            <Layout
                app:layout_constraintEnd_toEndOf="@+id/woman_image"
                app:layout_constraintStart_toStartOf="@+id/woman_image"
                app:layout_constraintTop_toTopOf="@+id/woman_image"
                app:layout_height="wrap_content"
                app:layout_marginEnd="50dp"
                app:layout_marginTop="220dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/man_image">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/woman_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_height="64dp"
                app:layout_width="64dp" />
            <Transform
                android:rotationY="-180"
                android:scaleX="2.5"
                android:scaleY="2.5"
                app:elevation="2dp" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/woman_image">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/man_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_height="64dp"
                app:layout_width="64dp" />
            <Transform
                android:rotationY="180"
                android:scaleX="2.5"
                android:scaleY="2.5"
                app:elevation="2dp" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/match_text">
            <Layout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_height="wrap_content"
                app:layout_marginTop="100dp"
                app:layout_width="wrap_content" />
            <Transform
                android:scaleX="2"
                android:scaleY="2" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/btn_chat">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_height="wrap_content"
                app:layout_marginBottom="30dp"
                app:layout_width="wrap_content" />
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/arrow">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_height="wrap_content"
                app:layout_marginBottom="16dp"
                app:layout_marginStart="16dp"
                app:layout_width="wrap_content" />
            <Transform android:rotation="180" />
        </Constraint>


    </ConstraintSet>

</MotionScene>
