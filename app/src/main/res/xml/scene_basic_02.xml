<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="1000">
        <OnSwipe
            app:touchAnchorId="@+id/button"
            app:touchAnchorSide="right"
            app:dragDirection="dragRight" />
        <KeyFrameSet>
            <KeyPosition
                app:keyPositionType="pathRelative"
                app:percentY="-0.50"
                app:framePosition="50"
                app:motionTarget="@id/button"/>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/button">
            <Layout
                app:layout_width="64dp"
                app:layout_height="64dp"
                app:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="#D81B60" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end"
        app:deriveConstraintsFrom="@+id/start">
        <Constraint
            android:id="@+id/button">
            <Layout
                app:layout_width="64dp"
                app:layout_height="64dp"
                app:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" />
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@android:color/holo_blue_bright" />
        </Constraint>
    </ConstraintSet>

</MotionScene>


