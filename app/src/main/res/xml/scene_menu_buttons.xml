<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/startToEnd"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000">
        <OnClick
            app:clickAction="transitionToEnd|transitionToStart"
            app:targetId="@id/item_add" />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                android:translationY="48dp"
                app:framePosition="35"
                app:motionTarget="@id/item_fav" />

            <KeyPosition
                app:curveFit="linear"
                app:framePosition="0"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@+id/item_fav"
                app:transitionEasing="decelerate" />

            <KeyAttribute
                android:alpha="0"
                android:translationY="48dp"
                app:framePosition="45"
                app:motionTarget="@id/item_child" />

            <KeyPosition
                app:curveFit="linear"
                app:framePosition="0"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@+id/item_child"
                app:transitionEasing="decelerate" />

            <KeyAttribute
                android:alpha="0"
                android:translationY="48dp"
                app:framePosition="60"
                app:motionTarget="@id/item_audio" />

            <KeyPosition
                app:curveFit="linear"
                app:framePosition="0"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@+id/item_audio"
                app:transitionEasing="decelerate" />

        </KeyFrameSet>


    </Transition>


    <ConstraintSet
        android:id="@+id/start">

        <Constraint android:id="@+id/item_add">
            <CustomAttribute app:attributeName="srcCompat"
                app:customStringValue="@drawable/ic_add_black_24dp"/>
        </Constraint>

        <Constraint android:id="@+id/item_child">
            <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/item_fav">
                <PropertySet app:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/item_audio">
            <PropertySet app:alpha="0" />
        </Constraint>

    </ConstraintSet>


    <ConstraintSet
        android:id="@+id/end">

        <Constraint android:id="@+id/item_add">
            <CustomAttribute app:attributeName="srcCompat"
                app:customStringValue="@drawable/ic_remove_black_24dp"/>
        </Constraint>


        <Constraint android:id="@+id/item_fav">
            <Layout
                app:layout_constraintBottom_toTopOf="@+id/item_add"
                app:layout_constraintStart_toEndOf="@+id/item_add"
                app:layout_marginStart="100dp"/>
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/item_child">
            <Layout
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/item_add"
                app:layout_constraintEnd_toStartOf="@+id/item_fav"
                app:layout_marginEnd="8dp"/>
            <PropertySet app:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/item_audio">
            <Layout
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/item_add"
                app:layout_constraintEnd_toStartOf="@+id/item_child"/>
            <PropertySet app:alpha="1" />
        </Constraint>


    </ConstraintSet>

</MotionScene>